@page
@model PRN221.SalesManagement.Web.Pages.ProductPage.IndexModel

@{
    ViewData["Title"] = "Products List";
}

<div class="container my-4">
    <h1 class="mb-3">Products List</h1>

    <p class="mb-3">
        <a class="btn btn-success btn-sm" asp-page="Create">Create New Product</a>
    </p>

    <!-- Compact Table with Enhanced Styling -->
    <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered text-center" style="table-layout: fixed; width: 100%; font-size: 0.875rem;">
            <thead class="thead-dark">
                <tr>
                    <th style="width: 15%;">@Html.DisplayNameFor(model => model.Product[0].Name)</th>
                    <th style="width: 35%;">@Html.DisplayNameFor(model => model.Product[0].Description)</th>
                    <th style="width: 10%;">@Html.DisplayNameFor(model => model.Product[0].Price)</th>
                    <th style="width: 10%;">@Html.DisplayNameFor(model => model.Product[0].Status)</th>
                    <th style="width: 15%;">@Html.DisplayNameFor(model => model.Product[0].Category.Name)</th>
                    <th style="width: 15%;" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Product)
                {
                    <tr>
                        <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                        <td class="text-center">
                            <a class="btn btn-info btn-sm" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-primary btn-sm" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Compact Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination pagination-sm justify-content-center mt-3">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.PageIndex - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item disabled">
                <span class="page-link">Page @Model.PageIndex of @Model.TotalPages</span>
            </li>
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.PageIndex + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
