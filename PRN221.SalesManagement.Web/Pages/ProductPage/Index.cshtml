@page
@using PRN221.SalesManagement.Repo.Dtos
@using PRN221.SalesManagement.Repo.SessionExtensions
@model PRN221.SalesManagement.Web.Pages.ProductPage.IndexModel

@{
    ViewData["Title"] = "Products List";
}
<style>
    .btn:hover {
        background-color: #66b2ff; /* Lighter blue shade */
        border-color: #3399ff;
        transform: scale(1.05);
        transition: all 0.3s ease-in-out;
    }

    .back-to-home {
        position: fixed;
        top: 20px;
        left: 20px;
        z-index: 1000;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">

<div class="container my-4">
    <a href="/" class="btn btn-light">
        <i class="fas fa-home"></i> Home
    </a>
</div>

<div class="container my-4">
    <h1 class="mb-3">Products List</h1>
    @{
        var user = HttpContext.Session.GetObjectFromJson<UserDto>("User");
    }
    @if (user != null && user.isAuthenticated)
        @if (user.isAdmin)
        {
            <p class="mb-3">
                <a class="btn btn-success btn-sm" asp-page="Create">Create New Product</a>
            </p>
        }

    <div class="table-responsive" style="min-height: 550px">
        <table class="table table-hover table-striped table-bordered text-center" style="table-layout: fixed; width: 100%; font-size: 0.875rem;">
            <thead class="thead-dark">
                <tr>
                    <th style="width: 15%;">@Html.DisplayNameFor(model => model.Product[0].Name)</th>
                    <th style="width: 35%;">@Html.DisplayNameFor(model => model.Product[0].Description)</th>
                    <th style="width: 10%;">@Html.DisplayNameFor(model => model.Product[0].Price)</th>
                    @if (user != null && user.isAuthenticated)
                        @if (user.isAdmin)
                        {
                            <th style="width: 10%;">@Html.DisplayNameFor(model => model.Product[0].Status)</th>
                        }
                    <th style="width: 15%;">@Html.DisplayNameFor(model => model.Product[0].Category)</th>
                    <th style="width: 15%;" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Product)
                {
                    <tr>
                        <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        @if (user != null && user.isAuthenticated)
                            @if (user.isAdmin)
                            {
                                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            }
                        <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                        @if (user != null && user.isAuthenticated)
                        {
                            @if (user.isAdmin)
                            {
                                <td class="text-center">
                                    <a class="btn btn-info btn-sm" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-primary btn-sm" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            }
                            else
                            {
                                <td class="text-center">
                                    <form asp-page="/Cart/Index" asp-page-handler="AddToCart" method="post">
                                        <input type="hidden" name="ProductId" value="@item.Id" />
                                        <input type="hidden" name="ProductName" value="@item.Name" />
                                        <input type="hidden" name="Description" value="@item.Description" />
                                        <input type="hidden" name="Price" value="@item.Price" />
                                        <input type="hidden" name="Quantity" value="1" />
                                        <button type="submit" class="btn btn-info btn-sm">Add Cart</button>
                                    </form>

                                    <a class="btn btn-primary btn-sm" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                                </td>

                            }
                        }
                        else
                        {
                            {
                                <td class="text-center">
                                    <a class="btn btn-info btn-sm" asp-page="/Account/Login" asp-route-id="@item.Id">Add Cart</a>
                                    <a class="btn btn-primary btn-sm" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                                </td>
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination pagination-sm justify-content-center mt-3">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.PageIndex - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item disabled">
                <span class="page-link">Page @Model.PageIndex of @Model.TotalPages</span>
            </li>
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.PageIndex + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
