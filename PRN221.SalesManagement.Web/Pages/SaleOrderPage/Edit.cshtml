@page
@model PRN221.SalesManagement.Web.Pages.SaleOrderPage.EditModel

@{
    ViewData["Title"] = "Edit Sale Order";
}

<h1 class="display-4 text-center mb-4">Edit Sale Order</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="SaleOrder.Id" />

                        <div class="form-group mb-3">
                            <label asp-for="SaleOrder.OrderDate" class="form-label"></label>
                            <input asp-for="SaleOrder.OrderDate" class="form-control" />
                            <span asp-validation-for="SaleOrder.OrderDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SaleOrder.TotalAmount" class="form-label"></label>
                            <input asp-for="SaleOrder.TotalAmount" class="form-control" />
                            <span asp-validation-for="SaleOrder.TotalAmount" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SaleOrder.CustomerName" class="form-label"></label>
                            <input asp-for="SaleOrder.CustomerName" class="form-control" />
                            <span asp-validation-for="SaleOrder.CustomerName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SaleOrder.Phone" class="form-label"></label>
                            <input asp-for="SaleOrder.Phone" class="form-control" />
                            <span asp-validation-for="SaleOrder.Phone" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-3">
                            <input class="form-check-input" asp-for="SaleOrder.Status" />
                            <label class="form-check-label">
                                @Html.DisplayNameFor(model => model.SaleOrder.Status)
                            </label>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f7f7f7; /* Light background for a modern look */
        color: #333; /* Dark text for readability */
    }

    h1.display-4 {
        font-size: 2.5rem;
        font-weight: 300;
        color: #0056b3; /* Primary color for headers */
    }

    .container {
        margin-top: 2rem;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 2rem;
    }

    .form-label {
        font-weight: 500;
    }

    .form-control {
        border-radius: 0.25rem;
        border: 1px solid #ccc;
        padding: 0.75rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 1rem;
        padding: 0.75rem 1.25rem;
        border-radius: 0.25rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
        }

    .text-danger {
        color: #dc3545;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
