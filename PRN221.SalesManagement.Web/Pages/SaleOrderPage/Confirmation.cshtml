@page "{id:int}"
@model PRN221.SalesManagement.Web.Pages.SaleOrderPage.ConfirmationModel
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mt-5">
    <div class="alert alert-success text-center">
        <h2 class="display-4">Order Placed Successfully!</h2>
        <p class="lead">Your order <strong>#@Model.SaleOrderId</strong> has been placed and is awaiting approval.</p>
        <p>You will be notified once your order is processed.</p>
        <a href="/ProductPage/Index" class="btn btn-primary mt-3">Continue Shopping</a>
    </div>
</div>
