@page
@model PRN221.SalesManagement.Web.Pages.SaleOrderPage.DeleteModel

@{
    ViewData["Title"] = "Delete Sale Order";
}

<h1 class="display-4 text-center text-danger mb-4">Delete Sale Order</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center mb-4">Are you sure you want to delete this?</h3>

                    <h4 class="text-center mb-4">Sale Order Details</h4>
                    <dl class="row">
                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.SaleOrder.OrderDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.SaleOrder.OrderDate)
                        </dd>

                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.SaleOrder.TotalAmount)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.SaleOrder.TotalAmount)
                        </dd>

                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.SaleOrder.CustomerName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.SaleOrder.CustomerName)
                        </dd>

                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.SaleOrder.Phone)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.SaleOrder.Phone)
                        </dd>

                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.SaleOrder.Status)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.SaleOrder.Status)
                        </dd>
                    </dl>

                    <form method="post" class="text-center mt-4">
                        <input type="hidden" asp-for="SaleOrder.Id" />
                        <button type="submit" class="btn btn-danger btn-lg me-2">Delete</button>
                        <a asp-page="./Index" class="btn btn-secondary btn-lg">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa; /* Light gray background for contrast */
        color: #343a40; /* Dark gray text for readability */
    }

    h1.display-4 {
        font-size: 2.5rem;
        font-weight: 300;
        color: #dc3545; /* Red color for the delete warning */
    }

    .container {
        margin-top: 2rem;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 2rem;
    }

    dl.row dt {
        font-weight: 500;
    }

    dl.row dd {
        font-weight: 300;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        font-size: 1rem;
        padding: 0.75rem 1.25rem;
        border-radius: 0.25rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c82333; /* Darker red */
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        font-size: 1rem;
        padding: 0.75rem 1.25rem;
        border-radius: 0.25rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Darker gray */
            transform: translateY(-2px);
        }
</style>
