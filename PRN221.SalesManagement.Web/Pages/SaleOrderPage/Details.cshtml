@page
@model PRN221.SalesManagement.Web.Pages.SaleOrderPage.DetailsModel

@{
    ViewData["Title"] = "Sale Order Details";
}

<h1 class="display-4 text-center mb-4">Sale Order Details</h1>

<div class="container">
    <div class="sale-order-details">
        <h4>@Model.SaleOrder.CustomerName's Order</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.SaleOrder.OrderDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SaleOrder.OrderDate)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.SaleOrder.TotalAmount)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SaleOrder.TotalAmount)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.SaleOrder.CustomerName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SaleOrder.CustomerName)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.SaleOrder.Phone)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SaleOrder.Phone)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.SaleOrder.Status)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SaleOrder.Status)
            </dd>
        </dl>
    </div>

    <div class="action-buttons text-center mt-4">
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.SaleOrder.Id">Edit</a>
        <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa; /* Light gray background for contrast */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1.display-4 {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        color: #343a40; /* Dark gray */
    }

    .sale-order-details h4 {
        font-size: 1.75rem;
        color: #007bff; /* Bootstrap primary color */
    }

    .sale-order-details dl {
        margin-top: 1.5rem;
    }

    .sale-order-details dt {
        font-weight: bold;
        color: #495057; /* Darker gray */
    }

    .sale-order-details dd {
        margin-bottom: 1rem;
        color: #212529; /* Almost black */
    }

    .action-buttons {
        margin-top: 2rem;
    }

    .btn-primary,
    .btn-secondary {
        padding: 0.5rem 1.25rem;
        font-size: 1rem;
        border-radius: 0.375rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: all 0.3s ease-in-out;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue shade */
            border-color: #004085;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Darker gray shade */
            border-color: #545b62;
            transform: scale(1.05);
        }
</style>
