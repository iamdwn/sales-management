@page
@model IndexModel

@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Sales Management System</h1>
    <p>Manage your products and categories efficiently.</p>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <p class="card-text">View, create, and manage products.</p>
                    <a asp-page="ProductPage/Index" class="btn btn-primary">Go to Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text">View, create, and manage categories.</p>
                    <a asp-page="CategoryPage/Index" class="btn btn-primary">Go to Categories</a>
                </div>
            </div>
        </div>
    </div>
</div>
