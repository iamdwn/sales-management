@page
@model PRN221.SalesManagement.Web.Pages.OrderDetailPage.DetailsModel

@{
    ViewData["Title"] = "Order Detail";
}

<h1 class="display-4 text-center mb-4">Order Detail</h1>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4>Order Detail</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.OrderDetail.UnitPrice)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.OrderDetail.UnitPrice)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.OrderDetail.Quantity)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.OrderDetail.Quantity)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.OrderDetail.SaleOrder)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.OrderDetail.SaleOrder.CustomerName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.OrderDetail.Product)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.OrderDetail.Product.Name)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.OrderDetail.Id">Edit</a>
    <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
</div>

<style>
    body {
        background-color: #f7f7f7; /* Light background color for contrast */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1.display-4 {
        font-size: 2.5rem;
        font-weight: 300;
        color: #0056b3; /* Primary color for headers */
    }

    .container {
        margin-top: 2rem;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
        background-color: #fff;
    }

    .card-body {
        padding: 2rem;
    }

    .card h4 {
        font-size: 1.75rem;
        color: #007bff; /* Primary color for sub-headers */
    }

    dl.row {
        margin-top: 1.5rem;
    }

    dt {
        font-weight: bold;
        color: #495057; /* Darker gray for labels */
    }

    dd {
        margin-bottom: 1rem;
        color: #212529; /* Dark text for details */
    }

    .btn-primary,
    .btn-secondary {
        padding: 0.5rem 1.25rem;
        font-size: 1rem;
        border-radius: 0.375rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: all 0.3s ease-in-out;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue for hover */
            border-color: #004085;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Darker gray for hover */
            border-color: #545b62;
            transform: scale(1.05);
        }
</style>
