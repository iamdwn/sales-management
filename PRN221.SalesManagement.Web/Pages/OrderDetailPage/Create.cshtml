@page
@model PRN221.SalesManagement.Web.Pages.OrderDetailPage.CreateModel

@{
    ViewData["Title"] = "Create Order Detail";
}

<h1 class="display-4 text-center mb-4">Create Order Detail</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="OrderDetail.ProductId" class="form-label"></label>
                            <select asp-for="OrderDetail.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                            <span asp-validation-for="OrderDetail.ProductId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="OrderDetail.OrderId" class="form-label"></label>
                            <select asp-for="OrderDetail.OrderId" class="form-control" asp-items="ViewBag.OrderId"></select>
                            <span asp-validation-for="OrderDetail.OrderId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="OrderDetail.UnitPrice" class="form-label"></label>
                            <input asp-for="OrderDetail.UnitPrice" class="form-control" />
                            <span asp-validation-for="OrderDetail.UnitPrice" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="OrderDetail.Quantity" class="form-label"></label>
                            <input asp-for="OrderDetail.Quantity" class="form-control" />
                            <span asp-validation-for="OrderDetail.Quantity" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f7f7f7;
        color: #333;
    }

    h1.display-4 {
        font-size: 2.5rem;
        font-weight: 300;
        color: #0056b3;
    }

    .container {
        margin-top: 2rem;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 2rem;
    }

    .form-label {
        font-weight: 500;
    }

    .form-control {
        border-radius: 0.25rem;
        border: 1px solid #ccc;
        padding: 0.75rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 1rem;
        padding: 0.75rem 1.25rem;
        border-radius: 0.25rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        font-size: 1rem;
        padding: 0.75rem 1.25rem;
        border-radius: 0.25rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
