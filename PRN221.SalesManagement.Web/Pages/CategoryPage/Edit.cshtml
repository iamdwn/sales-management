@page
@model PRN221.SalesManagement.Web.Pages.CategoryPage.EditModel

@{
    ViewData["Title"] = "Edit Category";
}

<h1 class="display-4 text-center text-primary mb-4">Edit Category</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="text-center mb-4">Category Details</h4>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Category.Id" />

                        <div class="form-group mb-3">
                            <label asp-for="Category.Name" class="form-label"></label>
                            <input asp-for="Category.Name" class="form-control" />
                            <span asp-validation-for="Category.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-3">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Category.Status" /> @Html.DisplayNameFor(model => model.Category.Status)
                            </label>
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" value="Save" class="btn btn-primary btn-lg me-2" />
                            <a asp-page="./Index" class="btn btn-secondary btn-lg">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
    }

    h1.display-4 {
        font-size: 2.5rem;
        font-weight: 300;
        color: #007bff; /* Primary color for the title */
    }

    .container {
        margin-top: 2rem;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 2rem;
    }

    .form-group label.form-label {
        font-weight: 500;
    }

    .form-group input.form-control {
        font-size: 1rem;
        padding: 0.75rem;
        border-radius: 0.25rem;
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-group input.form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .form-check-label {
        font-weight: 500;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 1rem;
        padding: 0.75rem 1.25rem;
        border-radius: 0.25rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        font-size: 1rem;
        padding: 0.75rem 1.25rem;
        border-radius: 0.25rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
        }

</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
