@page
@model PRN221.SalesManagement.Web.Pages.CategoryPage.DeleteModel

@{
    ViewData["Title"] = "Delete Category";
}

<h1 class="display-4 text-center text-danger mb-4">Delete Category</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="text-center mb-4">Confirm Deletion</h4>

                    <h5 class="text-center mb-4">Are you sure you want to delete this category?</h5>

                    <div>
                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Category.Name)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Category.Name)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Category.Status)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Category.Status)
                            </dd>
                        </dl>
                    </div>

                    <form method="post" class="text-center">
                        <input type="hidden" asp-for="Category.Id" />
                        <button type="submit" class="btn btn-danger btn-lg me-2">Delete</button>
                        <a asp-page="./Index" class="btn btn-secondary btn-lg">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
    }

    h1.display-4 {
        font-size: 2.5rem;
        font-weight: 300;
        color: #dc3545; /* Danger color for delete */
    }

    .container {
        margin-top: 2rem;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 2rem;
    }

    .dl.row dt {
        font-weight: 500;
    }

    .dl.row dd {
        font-size: 1rem;
        color: #495057;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        font-size: 1rem;
        padding: 0.75rem 1.25rem;
        border-radius: 0.25rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c82333;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        font-size: 1rem;
        padding: 0.75rem 1.25rem;
        border-radius: 0.25rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
        }

</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
