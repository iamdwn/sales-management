@page
@model PRN221.SalesManagement.Web.Pages.CategoryPage.CreateModel

@{
    ViewData["Title"] = "Create Category";
}

<h1 class="display-4 text-center mb-4">Create Category</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="text-center mb-4">Add New Category</h4>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Category.Name" class="form-label"></label>
                            <input asp-for="Category.Name" class="form-control" placeholder="Enter category name" />
                            <span asp-validation-for="Category.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check mb-3">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Category.Status" />
                                @Html.DisplayNameFor(model => model.Category.Status)
                            </label>
                        </div>
                        <div class="text-center">
                            <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
    }

    h1.display-4 {
        font-size: 2.5rem;
        font-weight: 300;
        color: #007bff; /* Primary color */
    }

    .container {
        margin-top: 2rem;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 2rem;
    }

    .form-label {
        font-weight: 500;
    }

    .form-group.mb-3 {
        margin-bottom: 1rem;
    }

    .form-check-label {
        font-weight: 400;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 1.25rem;
        padding: 0.75rem 1.5rem;
        border-radius: 0.25rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        font-size: 1rem;
        padding: 0.75rem 1.5rem;
        border-radius: 0.25rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
        }

</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
