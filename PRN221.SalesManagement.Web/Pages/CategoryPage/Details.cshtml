@page
@model PRN221.SalesManagement.Web.Pages.CategoryPage.DetailsModel

@{
    ViewData["Title"] = "Category Details";
}

<h1 class="display-4 text-center mb-4">Category Details</h1>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-4">Category Information</h4>
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Category.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Category.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Category.Status)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Category.Status)
                </dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Category.Id">Edit</a>
        <a class="btn btn-secondary ms-3" asp-page="./Index">Back to List</a>
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
    }

    h1.display-4 {
        font-size: 2.5rem;
        font-weight: 300;
        color: #007bff; /* Primary color */
    }

    .container {
        margin-top: 2rem;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 2rem;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 500;
        color: #343a40;
    }

    dl.row dt {
        font-weight: 500;
    }

    dl.row dd {
        font-weight: 400;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 1rem;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        font-size: 1rem;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
        }

    .text-center {
        text-align: center;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }

    .ms-3 {
        margin-left: 1rem;
    }

</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
